@using Microsoft.AspNetCore.Identity
@using Gestao_Patrimonial.Areas.Identity.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Databases <span class="caret"></span></a>
        <ul class="dropdown-menu" role="menu">
            <li><a asp-area="" asp-controller="Departments" asp-action="Index">Departments</a></li>
            <li><a asp-area="" asp-controller="Sellers" asp-action="Index">Sellers</a></li>
            <li><a asp-area="" asp-controller="SalesRecords" asp-action="Index">Sales</a></li>
            <li><a asp-area="" asp-controller="Users" asp-action="Index">Users</a></li>
        </ul>
    </li>
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Welcome @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
            </li>
        </ul>
    </form>
}

